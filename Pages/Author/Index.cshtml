@page
@model RazorCRUD.IndexModel
@{
    ViewData["Title"] = "Author";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-md-9">
        <h2 class="text-info">Author Lists</h2>
    </div>
    <div class="col-md-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Author</a>
    </div>

    <div class="col-md-12 border p-3 m-3">
        <form method="post">
            @if (Model.Authors.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Authors.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Authors.FirstOrDefault().Origin"></label>
                        </th>
                        <th>
                            <label asp-for="Authors.FirstOrDefault().Description"></label>
                        </th>
                        <th>

                        </th>
                    </tr>

                    @foreach (var item in Model.Authors)
                    {
                        <tr>
                            <td> @Html.DisplayFor(m => item.Name)</td>
                            <td> @Html.DisplayFor(m => item.Origin)</td>
                            <td> @Html.DisplayFor(m => item.Description)</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure? want to delete any way??')" class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>No data available</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">Or</span>
        <br /><br />
    </div>

    <div class="col-12 border p-3">
        <table id="auth_dt" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Origin</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

</div>

@section Scripts{
    <script src="~/js/DataTable/Author.js"></script>
}