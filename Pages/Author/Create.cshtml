@page
@model RazorCRUD.CreateModel
@{
    ViewData["Title"] = "Author";
}


<br />
<h2 class="text-info"> Add author</h2>
<br />


<div class="container border" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Author.Name"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Author.Name" class="form-control" />
            </div>
            <span asp-validation-for="Author.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Author.Origin"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Author.Origin" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Author.Description"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Author.Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-md-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>


    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

